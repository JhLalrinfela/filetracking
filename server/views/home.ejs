<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="css/style.css" rel="stylesheet" />
    <link href="css/home.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/images/title.png" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="js/homescript.js"></script>
    <script src="js/loginscript.js"></script>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand p-2" href="#"
          >I-eFiS
          <p>(Irrigation Electronics Filing System)</p></a
        >
      </nav>

      <div class="row mt-4" id="secondrow">
        <!-- fist column -->
        <div class="col-md-9">
          <!-- first -->
          <div class="row">
            <div class="col-md-6">
              <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img
                      src="images/pending.png"
                      class="img-fluid rounded-start"
                      alt="..."
                    />
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">No. of Pending Files</h5>
                      <p
                        class="card-text text-danger"
                        id="cardone"
                        style="font-size: 50px; text-align: center"
                      ></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img
                      src="images/complete.png"
                      class="img-fluid rounded-start"
                      alt="..."
                    />
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">No. of Complete Files</h5>
                      <p
                        class="card-text text-success"
                        id="cardtwo"
                        style="font-size: 50px; text-align: center"
                      ></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- sedond -->
          <div class="row">
            <div class="col-md-6">
              <div class="card mb-3">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img
                      src="images/register.png"
                      class="img-fluid rounded-start"
                      alt="..."
                    />
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">No. of Registered Users</h5>
                      <p
                        class="card-text text-danger"
                        id="cardthree"
                        style="font-size: 50px; text-align: center"
                      ></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Pending Files Nei te</h5>
                <table class="table">
                  <thead>
                    <tr>
                      <th>Subject</th>
                      <th>Changtu</th>
                      <th>Pending Hours</th>
                    </tr>
                  </thead>
                  <tbody id="pendingfileneite"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <!-- first column end -->
        <!-- Second column -->
        <div class="col-md-3">
          <form id="userlogin" action="/login" method="POST">
            <h2 class="m-3">User Login</h2>
            <div class="form-group mb-4">
              <select class="form-select" name="username" required>
                <option value="0" disabled selected>Select User</option>
                <% if(uname.length > 0) { uname.forEach(function(data) { %>
                <option value="<%= data.uname %>"><%= data.uname %></option>
                <%});}%>
              </select>
            </div>
            <div class="form-group mb-4">
              <input
                type="password"
                class="form-control"
                id="password"
                placeholder="Password"
                name="password"
              />
            </div>
            <button type="submit" class="btn btn-primary mb-4" id="submit">
              Submit
            </button>
            <a
              href="#"
              data-bs-toggle="modal"
              data-bs-target="#myModal"
              id="registerlink"
              >Register</a
            >
          </form>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">User SignUp</h4>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <form>
              <div class="form-group mb-4">
                <input
                  type="text"
                  class="form-control"
                  id="uname"
                  placeholder="Enter User of Your Choice"
                />
              </div>
              <div class="form-group mb-4">
                <input
                  type="password"
                  class="form-control"
                  id="upass"
                  placeholder="Password"
                />
              </div>
              <button
                type="button"
                class="btn btn-primary mb-4"
                data-bs-dismiss="modal"
                id="registerbutton"
              >
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
